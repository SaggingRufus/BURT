{
  "$id": "https://example.com/geographical-location.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Window Layout Schema",
  "description": "Describes the layout for the main window in BURT",
  "required": [ "row" ],
  "type": "object",
  "properties": {
    "height": {
      "type": "number",
      "minimum": 1,
      "maximum": 1080,
	  "default": 800
    },
    "width": {
      "type": "number",
      "minimum": 1,
      "maximum": 1920,
	  "default": 600
    },
	"row": {
		"type": "array",
		"items": { 
			"type": "object",
			"properties": {
				"span": {
					"type": "number",
					"description": "percent of the row the column occupies",
					"minimum": 1,
					"maximum": 100,
					"default": 100
				},
				"content":{
					"type": "array",
					"items": { "type": "string"}
				}
			}
		}
	}
  }
}